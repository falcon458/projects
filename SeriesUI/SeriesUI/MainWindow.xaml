<Window x:Class="SeriesUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeriesUI"
        mc:Ignorable="d"
        Name="mainWindow"
        Title="Series" Height="589.767" Width="800">
    <Grid Margin="0,-24,0,0">
        <ListBox x:Name="listBoxSeries" DisplayMemberPath = "Name" HorizontalAlignment="Left" Height="353" Margin="25,70,0,0" VerticalAlignment="Top" Width="187" SelectionChanged="listBoxSeries_SelectionChanged"/>
        <Grid x:Name="grdSeasons" HorizontalAlignment="Left" Height="40" Margin="229,25,0,0" VerticalAlignment="Top" Width="553"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="488" Margin="229,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="446"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="85,469,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnRefresh" Content="Refresh" HorizontalAlignment="Left" Margin="85,444,0,0" VerticalAlignment="Top" Width="75" Click="btnRefresh_Click"/>

    </Grid>
</Window>
